{
  "name": "productivity-planner",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:development": "ng build --configuration=development",
    "build:staging": "ng build --configuration=staging",
    "build:production": "ng build --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch -- onlyChanged --verbose",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "deploy:development": "npm run build:development && firebase use development && firebase deploy",
    "deploy:staging": "npm run build:staging && firebase use staging && firebase deploy",
    "deploy:production": "npm run build:production && firebase use production && firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.5",
    "@angular/common": "^19.2.5",
    "@angular/compiler": "^19.2.5",
    "@angular/core": "^19.2.5",
    "@angular/forms": "^19.2.5",
    "@angular/platform-browser": "^19.2.5",
    "@angular/platform-browser-dynamic": "^19.2.5",
    "@angular/router": "^19.2.5",
    "@ngrx/signals": "^19.1.0",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "rxjs": "~7.8.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^19.2.0",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.5",
    "@types/jest": "^29.5.14",
    "angular-eslint": "^19.3.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.4.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.10.0"
  }
}
